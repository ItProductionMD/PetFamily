{
  "ConnectionStrings": {
    "PostgreForPetFamily": "plug",
    "Seq": "plug"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DapperOptions": {
    "QueryTimeout": 20 // seconds
  },
  "DbCleanupService": {
    "TimeDelayInHours": 24,
    "DeleteAfterDays": 30
  },
  "FileFolders": {
    "Images": "petfamilyimagesversioned",
    "Documents": "petfamilydocuments",
    "PendingDeletion": "petfamilypendingdeletion"
  },
  "FileValidatorOptions": {
    "MaxSize": 52428800,
    "MaxFilesCount": 10,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".tiff", ".svg", ".ico", ".webp" ],
    "AllowedMimeTypes": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/bmp",
      "image/tiff",
      "image/svg+xml",
      "image/x-icon",
      "image/webp"
    ]
  },
  "AllowedHosts": "*"
}
