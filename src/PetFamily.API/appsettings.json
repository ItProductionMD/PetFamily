{
  "ConnectionStrings": {
    "PostgreForPetFamily": "plug",
    "Seq": "plug"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CleanupService": {
    "TimeDelayInHours": 24,
    "DeleteAfterDays": 30
  },
  "FileValidatorOptions": {
    "MaxSize": 52428800,
    "MaxFilesCount": 10,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".tiff", ".svg", ".ico", ".webp" ],
    "AllowedMimeTypes": ["image/jpeg", "image/png", "image/gif", "image/bmp", "image/tiff",
                         "image/svg+xml","image/x-icon","image/webp"]    
  },
  "AllowedHosts": "*"
}
